{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "C/C++ Runner: Debug Session",
		"type": "cppdbg",
		"request": "launch",
		"args": ["maps/42.fdf"],
		"stopAtEntry": false,
		"externalConsole": false,
		"cwd": "${workspaceFolder}",
		"program": "${workspaceFolder}/fdf",
		"MIMode": "gdb",
		"miDebuggerPath": "gdb",
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  }
		],
		"preLaunchTask": "run the makefile"
	  }
	]
  }